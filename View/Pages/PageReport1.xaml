<Page x:Class="PetrovaControl8.View.Pages.PageReport1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetrovaControl8.View.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="596"
      Title="PageReport1">

    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="25"
                    Width="400">
            <Button Name="PrintBtn"
                    Click="PrintBtn_Click"
                    Content="Печать"
                    Width="50"/>
            <DataGrid Name="JournalDg"
                      AutoGenerateColumns="False"
                      CanUserResizeRows="False"
                      CanUserDeleteRows="False"
                      CanUserAddRows="False"
                      Width="350"
                      VerticalAlignment="Top"
                      Height="350"
                      Margin="20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Направление" Width="*" Binding="{Binding Activity.Direction.Name}"/>
                    <DataGridTextColumn Header="Баллы" Width="*" Binding="{Binding Mark}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
